<Window x:Class="Robo_Controller_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Robo_Controller_Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="377.568" Width="781.726">
    <Canvas x:Name="GameBoard" HorizontalAlignment="Left" Height="313" Margin="417,0,0,0" VerticalAlignment="Top" Width="345" Initialized="GameBoard_Initialized">
        <GroupBox x:Name="robotInfo" Header="Robot Info" Height="314" Canvas.Left="-415" Canvas.Top="2" Width="187">
            <Button x:Name="button" Content="Run!" HorizontalAlignment="Left" Height="25" Margin="0,270,-2,-3" VerticalAlignment="Top" Width="177" Click="Button_Click" />
        </GroupBox>
        <TextBox x:Name="codeView" Height="269" Canvas.Left="-223" TextWrapping="Wrap" Canvas.Top="12" Width="217" RenderTransformOrigin="0.5,0.5" AcceptsReturn="True" AcceptsTab="True" AutoWordSelection="True" Background="#FF9C9C9C" TextChanged="TextBox_TextChanged">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="0.149" />
                    <TranslateTransform />
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <ProgressBar x:Name="CPUProgressBar" Height="18" Canvas.Left="1" Canvas.Top="322" Width="336" />
        <Button x:Name="clearCode" Content="Clear" Canvas.Left="-223" Canvas.Top="288" Width="75" Height="26" Click="ClearCode_Click" />
    </Canvas>
</Window>