<Window x:Class="Robo_Controller_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Robo_Controller_Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="573.095" Width="1160.549">
    <Canvas x:Name="GameBoard" HorizontalAlignment="Left" Height="313" Margin="788,0,0,0" VerticalAlignment="Top" Width="345" Initialized="GameBoard_Initialized">
        <Button x:Name="button" Content="Run!" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="217" Click="Button_Click" Canvas.Left="-405" Canvas.Top="335" />

        <TextBox x:Name="codeView" Height="269" Canvas.Left="-405" TextWrapping="Wrap" Canvas.Top="13" Width="217" RenderTransformOrigin="0.5,0.5" AcceptsReturn="True" AcceptsTab="True" AutoWordSelection="True" Background="#FF9C9C9C" TextChanged="TextBox_TextChanged">
        </TextBox>
        <ProgressBar x:Name="CPUProgressBar" Height="18" Canvas.Left="1" Canvas.Top="322" Width="336" />
        <Button x:Name="clearCode" Content="Clear" Canvas.Left="-263" Canvas.Top="289" Width="75" Height="26" Click="ClearCode_Click" />
        <Label x:Name="robotInfoTitle" Content="Robot Info Title" Canvas.Left="-772" Canvas.Top="13" Width="177" FontWeight="Bold" />
        <Grid x:Name="robotPartGrid" Height="460" Canvas.Left="-772" Canvas.Top="39" Width="331" HorizontalAlignment="Left" VerticalAlignment="Top">
        </Grid>
    </Canvas>
</Window>